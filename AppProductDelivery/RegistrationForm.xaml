<Window x:Class="AppProductDelivery.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppProductDelivery"
        mc:Ignorable="d"
        Title="RegistrationForm" Height="450" Width="800" 
		Background="#c5db91" ResizeMode="CanMinimize"  WindowStyle="SingleBorderWindow">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="287*"/>
			<ColumnDefinition Width="513*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="100*"/>
			<RowDefinition Height="230*"/>
		</Grid.RowDefinitions>
		<Border Grid.Row="0" Background="#c6d4a5"></Border>
		<Border Grid.Row="1" Background="#c6d4a5" BorderBrush="#212e04" BorderThickness="0,0,2,0"></Border>
		<Border Grid.Column="1" Background="#c6d4a5" BorderBrush="#212e04" BorderThickness="0,0,0,2"></Border>
		<Label Grid.Column="1" Content="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" FontFamily="Rockwell Extra Bold" Height="80" Width="396"/>
		<Image Name="Icon" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" Source="Images/3558114_car_delivery_fruit_sell_street_icon.png" StretchDirection="DownOnly" Stretch="Fill" MouseDown="Icon_MouseDown"/>
		<TextBlock Name="Greeting" Grid.Row="1" Text="Добро пожаловать на наш сервис &quot;FamilyTech Solutions&quot;. Для продолжения введите ваш логин и пароль, если он у вас уже есть, то для продолжения нажмите кнопку &quot;Войти&quot;." TextWrapping="Wrap" FontFamily="Rockwell Extra Bold" FontSize="20" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5" Opacity="0" Padding="5,0,0,0" TextAlignment="Center">
			<TextBlock.RenderTransform>
				<ScaleTransform ScaleX="0" ScaleY="0"></ScaleTransform>
			</TextBlock.RenderTransform>
		</TextBlock>
		<Image Name="ImageGreeting" HorizontalAlignment="Center" Height="100" Margin="0,180,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Source="Images/11783431_handshake_agreement_deal_partnership_greeting_icon.png" Visibility="Collapsed" Opacity="0" RenderTransformOrigin="0.5,0.5">
			<Image.RenderTransform>
				<ScaleTransform ScaleX="0" ScaleY="0"></ScaleTransform>
			</Image.RenderTransform>
		</Image>
		<TextBlock Grid.Row="1" Name="BeforeGreeting" Text="Добро пожаловать! 
				   Для подробной информации нажмите на картинку!" FontFamily="Rockwell Extra Bold" TextWrapping="Wrap" Visibility="Visible" Opacity="1" RenderTransformOrigin="0.5,0.5" FontSize="20" Padding="10,0,0,0" TextAlignment="Center" HorizontalAlignment="Stretch">
			<TextBlock.RenderTransform>
				<ScaleTransform ScaleX="1" ScaleY="1"/>
			</TextBlock.RenderTransform>
		</TextBlock>
	</Grid>
</Window>
